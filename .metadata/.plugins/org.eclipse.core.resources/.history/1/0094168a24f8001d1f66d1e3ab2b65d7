package com.nexos.credibanco.entity;

import java.math.BigDecimal;
import java.time.LocalDate;

import jakarta.persistence.*;

@Entity
@Table(name = "Tarjeta")
public class Tarjeta {
	@Id
    @GeneratedValue(strategy = GenerationType.AUTO)
	private Integer id;
	private  String idProducto;
    private String nombreTitular;
    private LocalDate fechaCreacion;
    private LocalDate fechaVencimiento;
    private BigDecimal saldo;
    private EstadoTarjeta estado;
    private Boolean bloqueada;
    private String moneda;
    
    
    public Tarjeta() {}
    
	public Tarjeta(Integer id, String idProducto, String nombreTitular, LocalDate fechaCreacion,
			LocalDate fechaVencimiento, BigDecimal saldo, EstadoTarjeta estado, Boolean bloqueada, String moneda) {
		super();
		this.id = id;
		this.idProducto = idProducto;
		this.nombreTitular = nombreTitular;
		this.fechaCreacion = fechaCreacion;
		this.fechaVencimiento = fechaVencimiento;
		this.saldo = saldo;
		this.estado = estado;
		this.bloqueada = bloqueada;
		this.moneda = moneda;
	}

	public Integer getId() {
		return id;
	}
	public void setId(Integer id) {
		this.id = id;
	}
	public String getIdProducto() {
		return idProducto;
	}
	public void setIdProducto(String idProducto) {
		this.idProducto = idProducto;
	}
	public String getNombreTitular() {
		return nombreTitular;
	}
	public void setNombreTitular(String nombreTitular) {
		this.nombreTitular = nombreTitular;
	}
	public LocalDate getFechaCreacion() {
		return fechaCreacion;
	}
	public void setFechaCreacion(LocalDate fechaCreacion) {
		this.fechaCreacion = fechaCreacion;
	}
	public LocalDate getFechaVencimiento() {
		return fechaVencimiento;
	}
	public void setFechaVencimiento(LocalDate fechaVencimiento) {
		this.fechaVencimiento = fechaVencimiento;
	}
	public BigDecimal getSaldo() {
		return saldo;
	}
	public void setSaldo(BigDecimal saldo) {
		this.saldo = saldo;
	}
	public EstadoTarjeta getEstado() {
		return estado;
	}
	public void setEstado(EstadoTarjeta estado) {
		this.estado = estado;
	}
	public Boolean getBloqueada() {
		return bloqueada;
	}
	public void setBloqueada(Boolean bloqueada) {
		this.bloqueada = bloqueada;
	}
	public String getMoneda() {
		return moneda;
	}
	public void setMoneda(String moneda) {
		this.moneda = moneda;
	}
    
    
    
}
